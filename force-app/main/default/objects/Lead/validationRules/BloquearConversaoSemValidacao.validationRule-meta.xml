<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>BloquearConversaoSemValidacao</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    IsConverted,
    NOT(Lead_Validado__c)
)</errorConditionFormula>
    <errorMessage>Não é possível converter o Lead sem validar o CNPJ.</errorMessage>
</ValidationRule>
